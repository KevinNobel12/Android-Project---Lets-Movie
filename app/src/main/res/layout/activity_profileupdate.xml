<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profileupdate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/Lightorange"
        android:orientation="vertical">

        <ImageView
            android:layout_width="165dp"
            android:layout_height="183dp"
            android:id="@+id/profilepic"
            android:layout_gravity="center"
            android:background="@color/Lightorange"
            android:src="@drawable/usser_burned"></ImageView>

        <ProgressBar
            android:id="@+id/profileprogress"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        </ProgressBar>


    </LinearLayout>


    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="420dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:hint="Name"
                android:inputType="text"
                android:lines="2" />

            <TextView
                android:id="@+id/nameshow"
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:hint="Name"
                android:inputType="text"
                android:lines="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:hint="Phone number"
            android:inputType="number" />

        <TextView
            android:id="@+id/phoneshow"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:hint="Phone number"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:hint="Credit card number"
            android:inputType="number" />

        <TextView
            android:id="@+id/creditcardsave"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:hint="Credit card number"
            android:inputType="number" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:hint="Expiry  Date"
            android:inputType="date" />

        <TextView
            android:id="@+id/expirysave"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:hint="Expiry  Date"
            android:inputType="date" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="174dp"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                android:hint="Security or CVV number"
                android:inputType="number" />

            <TextView
                android:id="@+id/cvvsave"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:hint="Security or CVV number-   "
                android:inputType="number" />
        </LinearLayout>
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/mybutton"
            android:text="Update Information"
            android:textColor="@color/cream" />

    </LinearLayout>

</RelativeLayout>